<%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Correo electrónico</td>
            <td>Número de elefono</td>
            <td>Id Conjunto</td>
            <td>Número de Torre</td>
            <td>Número de Apartamento</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].nombre %></td>
                <td><%= data[i].apellido %></td>
                <td><%= data[i].correo %></td>
                <td><%= data[i].telefono %></td>
                <td><%= data[i].id_conjunto %></td>
                <td><%= data[i].nro_torre %></td>
                <td><%= data[i].nro_apartamento %></td>
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="nombre" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="apellido" placeholder="Apellido" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="correo" placeholder="Correo electrónico" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="telefono" placeholder="Número de elefono" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="id_conjunto" placeholder="Id Conjunto" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="nro_torre" placeholder="Número de Torre" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="nro_apartamento" placeholder="Número de Apartamento" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            save customer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
